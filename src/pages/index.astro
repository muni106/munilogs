---
import '../styles/global.css';
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogCard from "../components/BlogCard.astro";
const pageTitle = "Latest Featured Posts"
const allPosts = Object.values(import.meta.glob('./posts/*/*.md', { eager: true }));
const featuredPosts = allPosts.filter(checkFeatured)

function checkFeatured(post: any) {
	return post.frontmatter.featured;
}

---

<BaseLayout pageTitle={pageTitle}>
	<h2>awesome home page</h2>
	<ul>
		{featuredPosts.map((post: any) => <BlogCard post={post} />)}
	</ul>
</BaseLayout>
